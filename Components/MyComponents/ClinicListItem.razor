@using Personal_Doctor.Data
@using Microsoft.AspNetCore.Components

<div class="d-flex align-items-center mb-3">
    <NavLink class="text-decoration-none text-dark d-flex align-items-center w-100" href="@($"/clinic/{Clinic.Id}")">
        <img src="@StaticMimeTypeGetter.GetImageSrc(Clinic.Picture)" class="rounded-circle me-3" style="width: 48px; height: 48px; object-fit: cover;" />
        <div>
            <div class="fw-bold">@Clinic.Name</div>
            <div class="text-muted small">@Clinic.Address</div>
        </div>
    </NavLink>
</div>

@code {
    [Parameter]
    public Clinic Clinic { get; set; }
}

